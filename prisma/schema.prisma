generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String    @id @default(cuid())
  email          String    @unique
  hashedPassword String
  name           String?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  
  sessions       Session[]
  accounts       Account[]
  
  // Sharing relationships
  sharedWithMe   DashboardShare[] @relation("SharedWith")
  sharedByMe     DashboardShare[] @relation("SharedBy")
  sentInvites    Invitation[]     @relation("InviteSender")
  receivedInvites Invitation[]    @relation("InviteRecipient")

  @@map("users")
}

model DashboardShare {
  id          String         @id @default(cuid())
  permission  SharePermission @default(VIEW)
  createdAt   DateTime       @default(now())
  
  ownerId     String
  owner       User           @relation("SharedBy", fields: [ownerId], references: [id], onDelete: Cascade)
  
  viewerId    String
  viewer      User           @relation("SharedWith", fields: [viewerId], references: [id], onDelete: Cascade)

  @@unique([ownerId, viewerId])
  @@map("dashboard_shares")
}

model Invitation {
  id          String           @id @default(cuid())
  email       String
  permission  SharePermission  @default(VIEW)
  status      InvitationStatus @default(PENDING)
  createdAt   DateTime         @default(now())
  expiresAt   DateTime
  
  senderId    String
  sender      User             @relation("InviteSender", fields: [senderId], references: [id], onDelete: Cascade)
  
  // If the invited email matches an existing user
  recipientId String?
  recipient   User?            @relation("InviteRecipient", fields: [recipientId], references: [id], onDelete: Cascade)

  @@map("invitations")
}

enum SharePermission {
  VIEW
  EDIT
}

enum InvitationStatus {
  PENDING
  ACCEPTED
  DECLINED
  EXPIRED
}

model Session {
  id        String   @id
  userId    String
  expiresAt DateTime
  
  user      User     @relation(references: [id], fields: [userId], onDelete: Cascade)

  @@map("sessions")
}

model Account {
  id        String      @id @default(cuid())
  name      String
  type      AccountType
  balance   Decimal     @default(0) @db.Decimal(12, 2)
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  
  userId    String
  user      User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  transactions    Transaction[] @relation("AccountTransactions")
  transfersTo     Transaction[] @relation("TransferToAccount")

  @@map("accounts")
}

enum AccountType {
  SAVINGS
  BUDGET
  ALLOWANCE
  RETIREMENT
  STOCK
}

model Transaction {
  id          String          @id @default(cuid())
  amount      Decimal         @db.Decimal(12, 2)
  description String
  date        DateTime
  type        TransactionType
  createdAt   DateTime        @default(now())
  
  // Primary account (source for transfers/expenses, destination for income)
  accountId   String
  account     Account         @relation("AccountTransactions", fields: [accountId], references: [id], onDelete: Cascade)
  
  // For transfers: the destination account
  transferToAccountId String?
  transferToAccount   Account? @relation("TransferToAccount", fields: [transferToAccountId], references: [id], onDelete: SetNull)

  @@map("transactions")
}

enum TransactionType {
  INCOME
  EXPENSE
  TRANSFER
}
